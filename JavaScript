    let currentQuestionIndex = 0;
    let selectedQuiz = [];
    let score = 0; // âœ… æ­£è§£æ•°ã‚’ã‚«ã‚¦ãƒ³ãƒˆã™ã‚‹å¤‰æ•°ã‚’è¿½åŠ 

    
    const genreSelectionEl = document.getElementById("genre-selection");
    const quizContainerEl = document.getElementById("quiz-container");
    const questionEl = document.getElementById("question");
    const choicesEl = document.getElementById("choices");
    const explanationEl = document.getElementById("explanation");
    const nextButton = document.getElementById("next-btn");
    
    // ğŸ”¹ é…åˆ—ã‚’ã‚·ãƒ£ãƒƒãƒ•ãƒ«ã™ã‚‹é–¢æ•°ï¼ˆFisher-Yates ã‚·ãƒ£ãƒƒãƒ•ãƒ«ï¼‰
    function shuffleArray(array) {
        for (let i = array.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [array[i], array[j]] = [array[j], array[i]]; // è¦ç´ ã‚’å…¥ã‚Œæ›¿ãˆ
        }
        return array;
    }
    
    function startQuiz(genre) {
        selectedQuiz = quizData[genre];
        currentQuestionIndex = 0;
        score = 0; // âœ… ã‚¯ã‚¤ã‚ºé–‹å§‹æ™‚ã«ã‚¹ã‚³ã‚¢ã‚’ãƒªã‚»ãƒƒãƒˆ
        genreSelectionEl.style.display = "none";
        quizContainerEl.style.display = "block";
        loadQuestion();
    }
    
    function loadQuestion() {
        const currentQuestion = selectedQuiz[currentQuestionIndex];
        questionEl.textContent = currentQuestion.question;
        choicesEl.innerHTML = "";
        explanationEl.textContent = ""; // è§£èª¬ã‚’ã‚¯ãƒªã‚¢
        nextButton.disabled = true;
    
        // ğŸ”¹ é¸æŠè‚¢ã‚’ãƒ©ãƒ³ãƒ€ãƒ ã«ä¸¦ã³æ›¿ãˆã‚‹
        let shuffledChoices = shuffleArray([...currentQuestion.choices]); // å…ƒã®é…åˆ—ã‚’å¤‰æ›´ã—ãªã„ã‚ˆã†ã‚³ãƒ”ãƒ¼
    
        shuffledChoices.forEach(choice => {
            const button = document.createElement("button");
            button.textContent = choice;
            button.onclick = () => checkAnswer(button, choice);
            choicesEl.appendChild(button);
        });
    }

    function checkAnswer(button, selectedAnswer) {
        const currentQuestion = selectedQuiz[currentQuestionIndex];
        const correctAnswer = currentQuestion.answer;
    
        if (selectedAnswer === correctAnswer) {
            button.classList.add("correct"); // âœ… æ­£è§£ã—ãŸé¸æŠè‚¢ã‚’ç·‘è‰²ã«
        } else {
            button.classList.add("wrong"); // âŒ é–“é•ãˆãŸé¸æŠè‚¢ã‚’èµ¤è‰²ã«
    
            // âœ… é–“é•ãˆãŸå ´åˆã€æ­£è§£ã®ãƒœã‚¿ãƒ³ã‚’æ¢ã—ã¦ç·‘è‰²ã«ã™ã‚‹
            Array.from(choicesEl.children).forEach(btn => {
                if (btn.textContent === correctAnswer) {
                    btn.classList.add("correct"); // æ­£è§£ã‚’ç·‘è‰²ã«
                }
            });
        }

        if (selectedAnswer === correctAnswer) {
            button.classList.add("correct");
            score++; // âœ… æ­£è§£ã—ãŸå ´åˆã€ã‚¹ã‚³ã‚¢ã‚’åŠ ç®—
        }
    
        // ã™ã¹ã¦ã®é¸æŠè‚¢ã‚’ç„¡åŠ¹åŒ–
        Array.from(choicesEl.children).forEach(btn => btn.disabled = true);
    
        // è§£èª¬ã‚’è¡¨ç¤º
        let explanationText = `è§£èª¬: ${currentQuestion.explanation}`;
        if (currentQuestion.url) {
            explanationText += `<br><a href="${currentQuestion.url}" target="_blank">è©³ã—ãã¯ã“ã¡ã‚‰</a>`;
        }
        explanationEl.innerHTML = explanationText;
    
        // æ¬¡ã®å•é¡Œãƒœã‚¿ãƒ³ã‚’æœ‰åŠ¹åŒ–
        nextButton.disabled = false;
    }
    
    nextButton.addEventListener("click", () => {
        currentQuestionIndex++;
        if (currentQuestionIndex < selectedQuiz.length) {
            loadQuestion();
        } else {
            alert(`ã‚¯ã‚¤ã‚ºçµ‚äº†ï¼ãŠç–²ã‚Œã•ã¾ã§ã—ãŸï¼\nã‚ãªãŸã®æ­£è§£æ•°: ${score} / ${selectedQuiz.length}`);
            genreSelectionEl.style.display = "block"; // ãƒ¬ãƒ™ãƒ«é¸æŠç”»é¢ã«æˆ»ã‚‹
            quizContainerEl.style.display = "none";   // ã‚¯ã‚¤ã‚ºç”»é¢ã‚’éè¡¨ç¤º
        }
    });
    
    // åˆæœŸçŠ¶æ…‹ã§ã¯ã‚¯ã‚¤ã‚ºã‚’è¡¨ç¤ºã—ãªã„
    quizContainerEl.style.display = "none";
const backButton = document.getElementById("back-btn");

backButton.addEventListener("click", () => {
    const confirmed = confirm("æœ¬å½“ã«ãƒ¬ãƒ™ãƒ«é¸æŠã«æˆ»ã‚Šã¾ã™ã‹ï¼Ÿ\né€²è¡Œä¸­ã®ã‚¯ã‚¤ã‚ºã¯çµ‚äº†ã—ã¾ã™ã€‚");
    if (confirmed) {
        genreSelectionEl.style.display = "block";
        quizContainerEl.style.display = "none";
    }
});
